<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <RatingBar
        android:id="@+id/RB_1_IDXML"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:stepSize="0.2" />

    <TextView
        android:id="@+id/TV_1_IDXML"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/TV_2_IDXML"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/TV_2_IDXML"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/RB_1_IDXML"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="@string/TV_2_IDXML"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold" />

    <Button
        android:id="@+id/B_1_IDXML"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/RB_1_IDXML"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:onClick="Ketika_Di_Pijit"
        android:text="@string/B_1_IDXML" />

</RelativeLayout>